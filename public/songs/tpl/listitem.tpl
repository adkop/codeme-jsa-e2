<article role="listitem" class="tile-box list-item" ref="song.box">
    <div class="list-item__inner-box">
        <header>
            <h3 class="list-item__title">{{title}}</h3>
            <div class="list-item__song-desc">
                <span class="list-item__artist">Artist: <em>{{artist}}</em></span>
                <span class="list-item__album">Album: <em>{{album}}</em></span>
            </div>
        </header>
        <div class="list-item__lyric">{{lyric|nl2br}}</div>
    </div>
</article>
